      console.log(ROOM_ID);
      const NAME = "<%= name%>";
      console.log(ROOM_ID);
      const GOOGLEID = "<%= googleid%>";
      console.log(ROOM_ID);
      const PHOTO = "<%= photo%>";
    </script>

    <script
      defer
      src="https://unpkg.com/peerjs@1.4.5/dist/peerjs.min.js"
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>

    <script src="script.js" defer></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script>
      function togglechat() {
        var element = document.getElementById("chat_component");
        if (element.style.display === "none") {
          element.style.display = "block";
        } else {
          element.style.display = "none";
        }
      }
      function toggleinfo() {
        var element = document.getElementById("info_component");
        if (element.style.display === "none") {
          element.style.display = "block";
        } else {
          element.style.display = "none";
        }
      }
     
    </script>

    <title>Document</title>
    
  </head>

  <body>
   
    <div class="main">
      <div class='meeting-info-block' id="info_component">
        <div class='meeting-header'>
          <h3>Your meeting's ready</h3>
          <h3
          id="cancelchat"
          onclick="toggleinfo()"
          style="cursor: pointer;"
        >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-x-circle" viewBox="0 0 16 16">
          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
          <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
        </svg>
        </h3>
        </div>
        <button class='add-people-btn'>
          <FontAwesomeIcon class='icon' icon={faUser} />
          Add Others
        </button>
        <p class='info-text'>
          Or share this meeting link with others that you want in the meeting
        </p>
        <div class='meet-link'>
          <span>"---ROOMID---"</span>
          <!-- <FontAwesomeIcon class='icon' icon={faCopy} onClick={()=>navigator.clipboard.writeText(url)}/> -->
        </div>
        <div class='permission-text'>
          <!-- <FontAwesomeIcon class='icon' icon={faShieldAlt} /> -->
          <p class='small-text'>
            People who use this meeting link must get your permission before they
            can join.
          </p>
        </div>
        <p class='small-text'>Joined as ayush@gmail.com</p>
      </div>
      <div class="main__top">
        <div id="screen">
          <video id="screen-video" autoplay ></video>
      </div>
        <div class="videos__group">
          <div id="video-grid"></div>
        </div>
        <div id="chat_component" class="toggle_component">
         <div class="main__right">
          <div class="main__chat_heading">
            <h3
              style="
               
                font-size: 1rem;
                font-weight: 400;
              "
            >
              Chat
            </h3>
            <h3
              id="cancelchat"
              onclick="togglechat()"
              style="
                
                
                cursor: pointer;
              "
            >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-x-circle" viewBox="0 0 16 16">
              <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
              <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
            </svg>
            </h3>
          </div>
          <div class="main__chat_window">
            <div class="messages"></div>
          </div>
          <div class="main__message_container">
            <input
              id="chat_message"
              type="text"
              autocomplete="off"
              placeholder="Type message here..."
            />
            <div id="send" class="send__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"  viewBox="0 0 512 512"><path d="M511.6 36.86l-64 415.1c-1.5 9.734-7.375 18.22-15.97 23.05c-4.844 2.719-10.27 4.097-15.68 4.097c-4.188 0-8.319-.8154-12.29-2.472l-122.6-51.1l-50.86 76.29C226.3 508.5 219.8 512 212.8 512C201.3 512 192 502.7 192 491.2v-96.18c0-7.115 2.372-14.03 6.742-19.64L416 96l-293.7 264.3L19.69 317.5C8.438 312.8 .8125 302.2 .0625 289.1s5.469-23.72 16.06-29.77l448-255.1c10.69-6.109 23.88-5.547 34 1.406S513.5 24.72 511.6 36.86z"/></svg>
            </div>
          </div>
         </div>
        </div>
      </div>
      <div class="main__bottom">
        <div class="options">
          <div class="options__left" style="width: 100%">
            <div id="stopVideo" class="video__button">
              <!-- <i class="fa-solid fa-circle-video" style="background-color:white"></i> -->
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-camera-video-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M0 5a2 2 0 0 1 2-2h7.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 4.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 13H2a2 2 0 0 1-2-2V5z"/>
              </svg>
            </div>
            <div id="muteButton" class="microphone__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-mic-fill" viewBox="0 0 16 16">
                <path d="M5 3a3 3 0 0 1 6 0v5a3 3 0 0 1-6 0V3z"/>
                <path d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5z"/>
              </svg>
            </div>
            <div id="recordButton" class="record__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-record-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
              </svg>
            </div>
            <div id="recordButton" class="stoprecord__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-record-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
              </svg>
            </div>
            <div id="presentButton" class="present__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-easel3-fill" viewBox="0 0 16 16">
                <path d="M8.5 12v1.134a1 1 0 1 1-1 0V12h-5A1.5 1.5 0 0 1 1 10.5V3h14v7.5a1.5 1.5 0 0 1-1.5 1.5h-5Zm7-10a.5.5 0 0 0 0-1H.5a.5.5 0 0 0 0 1h15Z"/>
              </svg>
            </div>
            <div id="stoppresentButton" class="stoppresent__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-easel3-fill" viewBox="0 0 16 16">
                <path d="M8.5 12v1.134a1 1 0 1 1-1 0V12h-5A1.5 1.5 0 0 1 1 10.5V3h14v7.5a1.5 1.5 0 0 1-1.5 1.5h-5Zm7-10a.5.5 0 0 0 0-1H.5a.5.5 0 0 0 0 1h15Z"/>
              </svg>
            </div>
            <div id="whiteboardButton" class="whiteboard__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 512 512"><path d="M362.7 19.32C387.7-5.678 428.3-5.678 453.3 19.32L492.7 58.75C517.7 83.74 517.7 124.3 492.7 149.3L444.3 197.7L314.3 67.72L362.7 19.32zM421.7 220.3L188.5 453.4C178.1 463.8 165.2 471.5 151.1 475.6L30.77 511C22.35 513.5 13.24 511.2 7.03 504.1C.8198 498.8-1.502 489.7 .976 481.2L36.37 360.9C40.53 346.8 48.16 333.9 58.57 323.5L291.7 90.34L421.7 220.3z"/></svg>
            </div>
            <div id="whiteboardButton" class="stopwhiteboard__button">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 512 512"><path d="M362.7 19.32C387.7-5.678 428.3-5.678 453.3 19.32L492.7 58.75C517.7 83.74 517.7 124.3 492.7 149.3L444.3 197.7L314.3 67.72L362.7 19.32zM421.7 220.3L188.5 453.4C178.1 463.8 165.2 471.5 151.1 475.6L30.77 511C22.35 513.5 13.24 511.2 7.03 504.1C.8198 498.8-1.502 489.7 .976 481.2L36.37 360.9C40.53 346.8 48.16 333.9 58.57 323.5L291.7 90.34L421.7 220.3z"/></svg>
            </div>
           
          </div>
          <div class="options__right" style="width: 23%">
            <div id="infoButton" class="info__button" onclick="toggleinfo()" style="cursor: pointer;">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
              </svg>
            </div>
            <div
            onclick="togglechat()"
            id="messageButton"
              class="message__button"
              style="cursor: pointer;margin-left: 2rem;"
            >
            
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-chat-left-fill" viewBox="0 0 16 16">
                  <path d="M2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                </svg>
              
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
